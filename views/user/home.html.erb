			<% (1..4).each do %>
		  		<li><%= render '/shared/user/user-card' %></li>
			<% end %>
		</ul>
	</section>
	<hr>

	<section>
		<h4>Últimas conversaciones</h4>

		<% (1..4).each do %>
			<article class="row">
				<div class="msg-item">
