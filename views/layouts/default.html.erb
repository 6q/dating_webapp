<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title><%= @title %> | Cellove.com</title>
    <!--[if IE]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="/javascripts/jquery-1.8.2.min.js"><\/script>')</script>
    <script src="/javascripts/jquery.flexslider-min.js"></script>
    <script src="/javascripts/functions.js"></script>

    <link href='http://fonts.googleapis.com/css?family=PT+Sans' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="/stylesheets/screen.css">
  </head>
  <body class="<%= @page.downcase if @page %>">
    <header role="banner" class="clearfix">
      <div class="container">
        <%= render '/shared/public-header-login' %>
        <h1><a href="/public/home">Cellove</a></h1>
        <h2>Ponle alas al amor</h2>
        <%= render '/shared/public-main-nav' %>
      </div>
    </header>
    <div class="container">
      <section role="main">

        <% if @sidebar %>
        <div class="row">
          <div class="span3">
            <% if @isblog %>
              <%= render '/shared/public-blog-sidebar' %>
            <% else %>
              <%= render '/shared/public-flat-sidebar' %>
            <% end %>
          </div>
          <div class="span9">
            <% if @isblog %>
              <div id="box-blog">
            <% else %>
              <div class="box">
            <% end %>
              <div class="box-content">
                <%= yield %>
              </div>
            </div>
          </div>
        <% else %>
          <%= yield %>
        <% end %>
      </section>
    </div>
    <%= render '/shared/public-in-love' %>
    <%= render '/shared/public-footer' %>  
    </div>
  </body>
</html>