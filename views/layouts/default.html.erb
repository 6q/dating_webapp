  <body>
    <div class="container">
      <header role="banner">
        <h1><a href="/">Cellove</a></h1>
        <h2>Ponle alas al amor</h2>
        <%= render '/shared/public-header-login' %>
        <nav role="navigation">
          <ul>
            <li><%= link_to 'Inicio','/home' %></li>
            <li><%= link_to 'Quiero recomendar','/quiero-recomendar' %></li>
            <li><%= link_to 'Quiero encontrar','/quiero-encontrar' %></li>
            <li><%= link_to 'Ver usuarios','/ver-usuarios' %></li>
          </ul>
        </nav>
      </header>
      <section role="main">
        <article>
          <header><h1><%= @title %></h1></header>
          <%= yield %>
        </article>
      </section>
    </div>
      <footer>
        <div class="container">
          <nav class="row">
            <div class="span3">
              <h4>Popularidad en Encomi</h4>
              <ul>
                <li><%= link_to '¿Qué es?', '#' %></li>
              </ul>
            </div>

            <div class="span3">
              <h4>Anuncio TV</h4>
              <ul>
                <li><%= link_to '¿Qué es?', '#' %></li>
              </ul>
            </div>

            <div class="span3">
              <h4>Blog Cellove</h4>
              <ul>
                <li><%= link_to '¿Qué es?', '#' %></li>
              </ul>
            </div>

            <div class="span3">
              <h4>Legal y conducta</h4>
              <ul>
                <li><%= link_to '¿Qué es?', '#' %></li>
              </ul>
            </div>
          </nav>
        </div>
      </footer>
    </div>
  </body>
</html>