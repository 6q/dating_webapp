<li>
<% if defined?(invisibles) && current_user.visitor?(user).invisible %>
<article class="user-card anonymous" data-toggle="tooltip" title="
    <strong><%= _('Anónimo') %></strong><br>
    <%= _('Última conexión') %>:
    <%= user.current_sign_in_at ? (user.online? ? _('Ahora online') : time_ago_in_words_or_date(user.current_sign_in_at)) : _('Nunca') %>">
    <ul class="pics">
      <li><%= profile_pic(user, {width: 210, height: 210, invisible: true}) %></li>
      <li><%= profile_pic(user, {width: 210, height: 210, invisible: true}) %></li>
    </ul>
    <header>
        <%=
          if user_signed_in?
            case params[:action]
              when 'hits'
                ('<small>' + time_ago_in_words_or_date(current_user.visitor?(user).visited_at) + '</small>').html_safe if current_user.visitor?(user)
              when 'likes'
                ('<small>' + time_ago_in_words_or_date(current_user.liker?(user).created_at) + '</small>').html_safe if current_user.liker?(user)
              when 'nice_couple'
                if rate = current_user.ratings_given.where(rateable_id: user.id).first || rate = current_user.rates.where(rater_id: user.id).first
                  ('<small>' + time_ago_in_words_or_date(rate.updated_at) + '</small>').html_safe
                end
            end
          end %>
      <h1>
        <div class="username">
          <%= _('Usuario VIP') %>
        </div>
        <span></span>
        <br /><%= _('Anónimo') %>
      </h1>
    </header>
    <ul class="actions clearfix">
      <li></li>
    </ul>
</article>
<% else %>
<article class="user-card <%= user.online? ? "online" : "" %>" data-toggle="tooltip" title="
    <strong><%=user.full_name%></strong><br>
    <%= _('Última conexión') %>:
    <%= user.current_sign_in_at ? (user.online? ? _('Ahora online') : time_ago_in_words_or_date(user.current_sign_in_at)) : _('Nunca') %>">
    <ul class="pics">
      <li><%= link_to profile_pic(user), user %></li>
    </ul>
    <header>
      <% if user_signed_in?
        block_modal_id = '#user-block-' + user.id.to_s %>
        <div class="block <%= (current_user.blocked?(user) || current_user.hidden?(user)) ? "disabled" : "" %> " data-toggle="tooltip" title="<%= _('Bloquear')%>">
          <%= link_to _('x'), block_modal_id, "data-toggle" => "modal" %>
        </div>
      <% end %>
        <%=
          if user_signed_in?
            case params[:action]
              when 'hits'
                ('<small>' + time_ago_in_words_or_date(current_user.visitor?(user).visited_at) + '</small>').html_safe if current_user.visitor?(user)
              when 'likes'
                ('<small>' + time_ago_in_words_or_date(current_user.liker?(user).created_at) + '</small>').html_safe if current_user.liker?(user)
              when 'nice_couple'
                if rate = current_user.ratings_given.where(rateable_id: user.id).first || rate = current_user.rates.where(rater_id: user.id).first
                  ('<small>' + time_ago_in_words_or_date(rate.updated_at) + '</small>').html_safe
                end
            end
          end %>
      <h1>
        <div class="username">
          <%= link_to truncate(user.display_name, length: 16), user %>
        </div>
        <span><%= truncate(user.city, length: 20) %></span>
        <br /><%= "#{user.age} #{_('Años')}" %>
      </h1>
    </header>

    <ul class="actions clearfix">

    <% if user_signed_in? %>

        <% if current_user.can_interact_with?(user) && current_user.can_message_to?(user) %>

            <li class="message" data-toggle="tooltip" title="<%= _('Enviar mensaje') %>">
                <%= link_to _('Enviar mensaje'), "#fast-reply-#{user.id}", 'data-toggle' => 'modal' %>
            </li>

        <% else %>

            <li class="message disabled loading-icon" data-toggle="tooltip" title="<%= _('No cumples su franja de edad indicada') %>">
                <%= link_to _('Enviar mensaje'), '#' %>
            </li>

        <% end %>

        <% if current_user.can_interact_with?(user) && current_user.can_chat_to?(user) %>

                <% if user.online? %>

                    <li class="chat" data-toggle="tooltip" title="<%= _('Chatear') %>">
                    <%= link_to _('Chat'), '#', onclick: "chatWith('#{user.id}'); return false;" %>
                    </li>

                <% else %>

                    <li class="chat disabled" data-toggle="tooltip" title="<%= _('Usuario desconectado') %>">
                        <%= link_to _('Chat'), '#' %>
                    </li>

                <% end %>

            <% else %>
            <li class="chat disabled loading-icon" data-toggle="tooltip" title="<%= _('No cumples su franja de edad indicada') %>">
                <%= link_to _('Chat'), '#' %>
            </li>
        <% end %>

        <% if current_user.can_interact_with?(user) %>

            <% if current_user.likes?(user) %>

                <li class="like disabled active" data-toggle="tooltip" title="<%= _('Ya no me gusta') %>">
                    <%= link_to _('Ya no me gusta'), user_unlike_path(user), method: :post, data: { id: user.id.to_s }, :class => "ajax_dislike_trigger", :remote => true %>
                </li>
                <li class="like hidden" data-toggle="tooltip" title="<%= _('Me gusta') %>">
                    <%= link_to _('Me gusta'), user_like_path(user), method: :post, data: { id: user.id.to_s }, :class => "ajax_like_trigger", :remote => true %>
                </li>
              <% else %>
                <li class="like active" data-toggle="tooltip" title="<%= _('Me gusta') %>">
                    <%= link_to _('Me gusta'), user_like_path(user), method: :post, data: { id: user.id.to_s }, :class => "ajax_like_trigger", :remote => true %>
                </li>
                <li class="like disabled hidden" data-toggle="tooltip" title="<%= _('Ya no me gusta') %>">
                    <%= link_to _('Ya no me gusta'), user_unlike_path(user), method: :post, data: { id: user.id.to_s }, :class => "ajax_dislike_trigger", :remote => true %>
                </li>

            <% end %>

        <% else %>


                <li class="like disabled loading-icon" data-toggle="tooltip" title="<%= _('No cumples su franja de edad indicada.') %>">
                    <%= link_to _('Me gusta'), "#" %>
                </li>


        <% end %>


    <% else %>

        <li class="message" data-toggle="tooltip" title="<%= _('Enviar mensaje') %>"><%= link_to _('Enviar mensaje'), new_user_registration_path %></li>
        <li class="chat" data-toggle="tooltip" title="<%= _('Chatear') %>"><%= link_to _('Chat'), new_user_registration_path %></li>
          <li class="like active" data-toggle="tooltip" title="<%= _('Ya no me gusta') %>"><%= link_to _('Ya no me gusta'), new_user_registration_path %></li>
          <li class="like hidden" data-toggle="tooltip" title="<%= _('Me gusta') %>"><%= link_to _('Me gusta'), new_user_registration_path %></li>

    <% end %>

    </ul>

    <% if @interactions == true %>

      <div class="interactions">
        <div class="punctuations">
          <strong><%= _("Tu dices:") %></strong> <%= stars_for(user, current_user) %>
          <strong><%= _("Ha dicho:") %></strong> <%= stars_for(current_user, user) %>
        </div>
        <%= link_to 'Proponer actividad', "#activity-proposal-#{user.id}" ,'data-toggle' => 'modal' %>
      </div>

    <% end %>
  </article>
  <% end %>
  </li>
  <% if user_signed_in? %>
    <%= render partial: 'conversations/modal_new_message', locals: { user: user } %>
    <%= render partial: 'shared/user/modal_user-block', locals: { user: user } %>
  <% end %>