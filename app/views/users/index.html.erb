<%= render 'shared/related_list' %>

<section class="search boxed">

  <div class="boxed-inner clearfix overflow-show">
    <header>
      <h1><%= _('Encuentra personas afines a tí') %></h1>
    </header>
    
    <%= search_form_for @search, class: 'span9 form-horizontal overflow-show' do |f| %>
      <div class="row">
        <div class="span8">
          <div class="control-group slider">
            <label class="control-label"><%= _('Edad') %></label>
            <div class="span6">
              <input id="years" type="slider" value="<%= params[:q][:years_lteq] || (current_user.lf_age_from.blank? ? '18' : current_user.lf_age_from) %>;<%= params[:q][:years_gteq] || (current_user.lf_age_to.blank? ? '80' : current_user.lf_age_to) %>"/>
              <%= f.hidden_field :years_lteq %>
              <%= f.hidden_field :years_gteq %>
            </div>
          </div>

            <div class="overflow-show control-group location-search">
                <%= f.label :city_eq, _('Localidad'), class: 'control-label location-label' %>
                <%= f.select :city_eq, [(params[:q][:city_eq] || current_user.city)], { include_blank: _('Localidad...'), selected: params[:q][:city_eq] || current_user.city }, { class: 'city', 'data-placeholder' => _('Localidad...') } %>
                <%= f.label :postal_code_cont, _('Código postal'), class: 'control-label zip' %>
                <%= f.text_field :postal_code_cont, placeholder: _('CP'), class: 'span1', value: (params[:q][:postal_code_cont] || current_user.postal_code) %>
            </div>

          <div class="clearfix">
            <div class="searchcol1">
              <div class="control-group slider">
                <label class="control-label"><%= _('Distancia') %></label>
                <div class="controls">
                  <%= text_field_tag :distance, (params[:distance] || '250'), type: 'slider' %>
                </div>
              </div>
              <div class="control-group slider">
                <label class="control-label"><%= _('Altura') %></label>
                <div class="controls">
                  <input id="altura" type="slider" name="" value="<%= @search.height_gteq || '150' %>;<%= @search.height_lteq || '220' %>"/>
                  <%= f.hidden_field :height_gteq  %>
                  <%= f.hidden_field :height_lteq  %>
                </div>
              </div>
              <div class="control-group">
                <%= f.label :description_cont, _('Palabra clave'), class: 'control-label' %>
                <div class="controls">
                  <%= f.text_field :description_cont %>
                </div>
              </div>
            </div>

            <div class="searchcol2">
              <div class="control-group slider">
                <label class="control-label"><%= _('Afinidad') %></label>
                <div class="controls">
                  <%= text_field_tag :affinity, (params[:affinity] || '0'), type: 'slider' %>
                </div>
              </div>
              <div class="control-group fit">
                <%= f.label :complexion_eq, _('Complexión'), class: 'control-label' %>
                <%= f.select :complexion_eq, User::COMPLEXION.map { |k, v| [v, k] }, include_blank: _('Complexión...'), selected: @search.complexion_eq %>
              </div>
              <div class="right">
                <%= f.submit _('Buscar'), class: 'btn btn-info' %>
              </div>
            </div>

          </div>
        </div>

        <div>
          <label class="checkbox">
            <%= f.check_box :pictures_main_eq, {}, 1, '' %><%= _('Con foto') %>
          </label>
          <label class="checkbox">
            <%= f.check_box :updated_at_gteq, {}, 5.minutes.ago, '' %><%= _('Online') %>
          </label>
          <label class="checkbox">
            <%= f.check_box :smoker_in, {}, User.is_smoker, '' %><%= _('Fumador') %>
          </label>
          <label class="checkbox">
            <%= f.check_box :children_in, {}, User.have_children, '' %><%= _('Con hijos') %>
          </label>
        </div>
      </div>
    <% end %>
  </div>
</section>

<hr class="thin">

<section class="list">
  <header>
    <div class="pull-left">
      <h1><%= _('Resultados de la búsqueda') %></h1>
    </div>
    <div class="pull-right">
      <div class="pull-left">
        <% if params[:q] %>
          <%= render 'shared/user/modal_save-search' %>
          <%= link_to _('Guarda búsqueda'), '#save-search', "data-toggle" => "modal", class: 'btn btn-info' %>
        <% end %>
      </div>
      <div class="pull-right sort-gustado"> 
        <%= render 'shared/user/sorting' %>
      </div>
    </div>
    <div class="clearfix"></div>
  </header>
  <ul class="user-list clearfix">
    <%= render @users %>
  </ul>
  <div class="pagination">
    <%= pager_total(@users) %>
  </div>
  <%= paginate @users %>
</section>

