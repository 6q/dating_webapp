<% title = "Ver usuarios" %>
<% content_for(:title) { title } %>

<section class="list public-user-list">
<div id="last-users" class="user-list">
  <h3>Últimos usuarios en Cellove <%= link_to _('¡Regístrate Gratis!'), new_user_registration_path %></h3>
  <ul class="clearfix">
    <% @users.each do |user| %>
      <%= render user %>
    <% end %>
  </ul>
</div>


<div id="top-users" class="user-list">
  <h3>Usuarios más populares <%= link_to _('¡Regístrate Gratis!'), new_user_registration_path %></h3>
  <ul class="clearfix">
    <% User.popular.each do |user| %>
      <%= render user %>
    <% end %>
  </ul>
</div>

</section>
