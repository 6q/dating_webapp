<section class="user-profile">

	<article class="boxed">
		<div class="boxed-inner">
			<div id="nice-couple">
				<i></i>
				<p>¿Hacéis buena pareja?</p>
				<ul>
					<li><a href="#">1</a></li>
					<li><a href="#">2</a></li>
					<li><a href="#">3</a></li>
					<li><a href="#">4</a></li>
					<li><a href="#">5</a></li>
				</ul>
			</div>

			<div class="user-detail-container clearfix">
				<div class="photo">
						<a href="/users/large_1.jpg" class="grouped_elements" rel="group1"><img src="/users/profile.jpg" width="210"></a>
				</div>
				<div class="description">
						<h5><%= "#{@user.name} #{@user.surname} | " %><span><%= "#{@user.town}, #{@user.country}" %></span></h5>
