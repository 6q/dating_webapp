<% gustos = 0%>
<div class="row">
	<% if @user.diet %>
		<div class="key span3">Dieta:</div>
		<% gustos = 1 %>
		<div class="valor span6">
			<div class="txt"><%= User::TP_DIET[@user.diet] %></div>
		</div>
	<% end %>
	<% if @user.smoke %>
		<% gustos = 1 %>
		<div class="key span3">Tabaco:</div>
		<div class="valor span6">
			<div class="txt"><%= User::TP_SMOKE[@user.smoke].downcase %></div>
		</div>
	<% end %>
	<% if @user.alcohol %>
		<% gustos = 1 %>
		<div class="key span3">Alcohol:</div>
		<div class="valor span6">
			<div class="txt"><%= User::TP_ALCOHOL[@user.alcohol] %></div>
		</div>
	<% end %>
	<% if @user.wedding_opinion %>
		<% gustos = 1 %>
		<div class="key span3">Matrimonio:</div>
		<div class="valor span6">
			<div class="txt"><%= User::TP_WEDDING_OPINION[@user.wedding_opinion].downcase %></div>
		</div>
	<% end %>
	<% if @user.animals %>
		<% gustos = 1 %>
		<div class="key span3">Animales:</div>
		<div class="valor span6">
			<div class="txt"><%= User::TP_ANIMALS[@user.animals].downcase %></div>
		</div>
	<% end %>
	<% if @user.party %>
		<% gustos = 1 %>
		<div class="key span3">Salir:</div>
		<div class="valor span6">
			<div class="txt"><%= User::TP_PARTY[@user.party].downcase %></div>
		</div>
	<% end %>
	<% if @user.music %>
		<% gustos = 1 %>
		<div class="key span3">Música:</div>
		<div class="valor span6">
			<div class="txt"><%= User::TP_MUSIC[@user.music].downcase %></div>
		</div>
	<% end %>
	<% if @user.music_genre %>
		<% gustos = 1 %>
		<div class="key span3">Género muscial preferido:</div>
		<div class="valor span6">
			<div class="txt"><%= User::MUSIC_GENRE[@user.music_genre] %></div>
		</div>
	<% end %>
	<% if @user.cinema %>
		<% gustos = 1 %>
		<div class="key span3">Cine:</div>
		<div class="valor span6">
			<div class="txt"><%= User::TP_CINEMA[@user.cinema].downcase %></div>
		</div>
	<% end %>
	<% if @user.cinema_frequency %>
		<% gustos = 1 %>
		<div class="key span3">Frecuencia:</div>
		<div class="valor span6">
			<div class="txt"><%= User::CINEMA_FREQUENCY[@user.cinema_frequency] %></div>
		</div>
	<% end %>
	<% if @user.cinema_genre %>
		<% gustos = 1 %>
		<div class="key span3">Género preferido:</div>
		<div class="valor span6">
			<div class="txt"><%= User::CINEMA_GENRE[@user.cinema_genre] %></div>
		</div>
	<% end %>
	<% unless @user.like_sport.blank? or (@user.like_sport=='0' and @user.like_read=="0" and @user.like_cinema=="0" and @user.like_quiet=="0" and @user.like_walk=="0" and @user.like_mountain=="0" and @user.like_beach=="0" and @user.like_family=="0" and @user.like_friends=="0") %>
	<% gustos = 1 %>
		<div class="key span3">Le gusta:</div>
		<div class="valor span6">
			<div class="txt">
				<%= "el deporte<br>".html_safe if @user.like_sport=="1" %>
				<%= "la lectura<br>".html_safe if @user.like_read=="1" %>
				<%= "el cine<br>".html_safe if @user.like_cinema=="1" %>
				<%= "estar tranquil@ en casa<br>".html_safe if @user.like_quiet=="1" %>
				<%= "pasear<br>".html_safe if @user.like_walk=="1" %>
				<%= "la montaña<br>".html_safe if @user.like_mountain=="1" %>
				<%= "la playa<br>".html_safe if @user.like_beach=="1" %>
				<%= "estar con la familia<br>".html_safe if @user.like_family=="1" %>
				<%= "estar con sus amigos<br>".html_safe if @user.like_friends=="1" %>
			</div>
		</div>
	<% end %>	
</div>

<% if gustos == 0 %>
	<%= "#{@user.name} aún no ha definido sus gustos." %>
<% end %>