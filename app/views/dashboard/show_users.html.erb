<section class="user-home">

    	<h4><%= _('Usuari@s que te pueden gustar') %></h4>

		<section id="related-list" class="vermas">
		  <div class="boxed">
		    <div class="boxed-inner">
		      <ul class="clearfix">
		        <% @best_suited_near_me.sample(48).each do |user| %>
		          <li class="<%= user.online? ? "online" : "" %> is-related">
		            <%= link_to user do %>
		              <%= profile_pic(user, width: 85, height: 85) %>
		            <% end %>
		          </li>
		        <% end %>
		          <li>
		            <%= link_to search_path(q: { years_lteq: current_user.lf_age_from, years_gteq: current_user.lf_age_to, city_eq: current_user.city }) do %>
		            	<%= image_tag("mobile/more-users.png") %>
		            <% end %>
		          </li>
		      </ul>
		    </div>
		  </div>
		</section>

</section>
