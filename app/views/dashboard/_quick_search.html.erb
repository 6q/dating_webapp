<section class="direct-search">
  <div class="boxed">
    <div class="boxed-inner">
      <h4>Búsqueda directa:</h4>
      <div class="searchform form-horizontal">
        <form>
          <fieldset class="span6">
            <div class="control-group sliders">
              <label>Edad <span></span></label>
              <div class="controls">
                <input id="years" type="slider" name="" value="18;80"/>
              </div>
            </div>
            <div class="control-group">
              <label>Población y código postal</label>
              <div class="controls">
                <input type="text" placeholder="Población" class="span3">
                <input type="text" placeholder="CP" class="span1">
              </div>
            </div>
            <div class="control-group sliders">
              <label>Distancia <span></span></label>
              <div class="controls">
                <input id="kms" type="slider" name="" value="20"/>
              </div>
            </div>
            <div class="control-group">
              <label>Palabra clave</label>
              <div class="controls">
                <input type="text">
              </div>
            </div>
          </fieldset>

          <fieldset class="form-options">
            <label class="checkbox">
              <input type="checkbox">Con foto
            </label>
            <label class="checkbox">
              <input type="checkbox">Online
            </label>
            <button type="submit" class="btn btn-info">Buscar</button>
          </fieldset>
        </form>

      </div>
    </div>
  </div>
</section>
