<!-- Modal -->
<div id="activity-proposal" class="modal hide fade" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3>Proponer una actividad</h3>
    <%= user_detail(sender_or_recipient(conversation)) %>
  </div>
  <%= simple_form_for Activity.new, url: conversation_activities_path(conversation) do |f| %>
    <div class="modal-body">

      <p>Selecciona una propuesta para compartir...</p>
      <br>
      <ul id="activity-types">
        <% Activity::ACTIVITY_TYPE.each do |k, v| %>
          <li class="<%= k %>"><%= link_to v, '#' %></li>
        <% end %>
      </ul>
      <%= f.input :activity_type, as: :hidden %>
      <div class="reply">
        <%= f.input_field :body %>
      </div>
      <br>
      <div id="activity-date" class="form-inline">
        <div class="control-group">
          <label><%= _('¿Cuando?') %></label> <%= f.input_field :date, as: :string, placeholder: 'dd/mm/aaaa', class: 'input-small' %>
          <label class="checkbox">
            <input type="checkbox"> No quiero especificar cuando
          </label>
        </div>
      </div>

    </div>
    <div class="modal-footer">
      <%= link_to 'Cancelar', '#fast-reply', 'data-toggle' => 'modal', 'data-dismiss' => 'modal', 'aria-hidden' => 'true' %>
      <%= f.submit _('Proponer'), class: 'btn btn-info' %>
    </div>
  <% end %>
</div>
