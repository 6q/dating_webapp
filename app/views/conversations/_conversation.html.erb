<%= div_for(conversation, :class =>"#{ 'unread ' if conversation.is_unread?(@actor) }msg-item") do %>
  <div class="clearfix">
    <div class="pic"><a href="/user/user-profile"><img src="/users/placeholder2.jpg" width="60" height ="60"></a></div>
      <div class="info">
        <p class="msg-data"><%= time_ago_in_words(conversation.updated_at) %> - <%= link_to conversation.last_sender.name, conversation.last_sender %></p>

        <p class="msg"><%= link_to(truncate(conversation.subject, :length => 55), conversation_path(conversation.id, :box => @box, :page => params[:page])) %></p>

      </div>
    <% unless @box.eql?'trash' %>
      <div class="reply">
        <%= link_to 'Eliminar', conversation_path(conversation, :location => @box,
                                                    :box => @box,
                                                    :page => params[:page]),
                                                    :confirm => t('mailboxer.delete_confirm',
                                                    :object => conversation.subject),
                                                    :method => :delete,
                                                    :remote => true, :class => 'delete' %>
        <%= link_to 'Responder', '#fast-reply', 'data-toggle' => 'modal' unless @tab == 'deleted-messages' %>
      </div>
    <% end %>
  </div>
<% end %>
