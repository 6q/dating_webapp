<% @current_page = 'profile-celestino'; %>

<section class="celestinos">
  <div class="boxed headless">
    <div class="boxed-inner">
      <header>
        <h1>¡Hola Celestin@!</h1>
      </header>
    </div>
  </div>
  <hr class="thin">
  
  <div class="boxed">
    <div class="boxed-inner">

      <article>
        <header>
          <h1>Quieres recomendar a una usuari@ registrad@ o alguien que no es usuari@?</h1>
        </header>
      </article>

      <div class="celes-box">
        <ul>
          <li class="red-heart">
            <i class="red-heart"></i>
            Ex pareja
          </li>

          <li class="violet-heart">
            <i class="violet-heart"></i>
            Amigo especial
          </li>

          <li class="green-heart">
            <i class="green-heart"></i>
            Amigo
          </li>

          <li class="yellow-heart">
            <i class="yellow-heart"></i>
            Familiar
          </li>
        </ul>
        <div class="btns">
          <%
            # Yes. Both buttons perform the same action. Don't ask. ^__^
          %>
          <a class="btn btn-medium btn-info" href="#recommend-user" data-toggle="modal">Recomendar usuari@ registrad@</a>
          <a class="btn btn-medium btn-info" href="#recommend-user" data-toggle="modal">Recomendar usuari@ nuev@</a>
        </div>
      </div>

      <% unless current_user.recommendations.empty? %>
        <div class="your-celestines">
          <h4 style="text-align:center">Personas a las que haces de Celestin@</h4>
          <% current_user.recommendations.each do |rec| %>
            <%= render 'shared/user/celes-item', recommendation: rec, is_creator: true %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <hr class="thin">

  <%= form_for @user, :url => profile_path do |f| %>
    <div class="boxed">
      <div class="boxed-inner">
        <article>
          <header>
            <h1>Datos de acceso a Cellove</h1>
          </header>
          <div class="clearfix">
            <div class="span4 left">
              <div class="control-group">
                <%= f.label :email, 'Email', :class => 'control-label' %>
                <div class="controls">
                  <%= f.email_field :email, :class => 'span2' %>
                </div>
              </div>
            </div>
            <div class="span4">
              <div class="control-group">
                <%= f.label :password, 'Contraseña', :class => 'control-label' %>
                <div class="controls">
                  <%= f.password_field :password, :class => 'span2' %>
                </div>
              </div>
            </div>
          </div>
          <hr>
          <div class="clearfix">
            <div class="span8">
              <div class="form-inline">
                Me llamo
                <%= f.text_field :name, :class => 'input-small' %>
                <%= f.text_field :surname, :class => 'input-small' %>
                pero quiero que mi nombre para mostrar sea 
                <%= f.text_field :screen_name, :class => 'input-small' %>
                <small>* Cellove recomienda utilizar tu nombre real para tener más posibilidades de contactos y Celestin@os. Deja este campo vacío para usar tu nombre real.</small>
              </div>
            </div>
          </div>

          <hr>

          <div class="center">
            <%= f.submit 'Modificar datos de acceso', :class => 'btn btn-info' %>
            <hr class="thin">
          </div>

        </article>
      </div>
    </div>
  <% end %>

</section>

<%= render '/shared/user/modal_recommend-user' %>

