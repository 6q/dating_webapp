							<%= user.label :lf_gender, "Busco" %>
      				<%= user.select :lf_gender, gender_options  %>
      				<%= user.select :lf_orientation, orientation_options  %>
      				<%= user.label :lf_marital_status, "y" %>
      				<%= user.select :lf_marital_status, marital_status_options,	{}, { :class => 'span2' } %>
