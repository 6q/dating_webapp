  <%= user.label :height, _(', mido') %>
  <%= user.text_field :height, :class => 'input-mini' %>
  <%= user.label :weight, _('cms. y peso ') %>
  <%= user.text_field :weight, :class => 'input-mini' %>
  kg.
  <hr class="thin">
  <%= user.label :complexion, _('Tengo un cuerpo ') %>
