  <%= user.label :hair_style,_(' y ') %>
  <%= user.select :hair_style, hair_style_options, {include_blank: _('No quiero decirlo')}, {:class=>'span2'} %>
  <hr class="thin">
  <%= user.label :physical_style, _('Mi estilo es') %>
  <%= user.select :physical_style, physical_style_options, {include_blank: _('No quiero decirlo')}, {:class=>'span2'} %>
  <hr>
  <%= user.label :religion, _('Soy') %>
  <%= user.select :religion, religion_options, {include_blank: _('No quiero decirlo')}, {:class => 'span2'} %>
  <%= user.label :religion_activity, _(' y') %>
  <%= user.select :religion_activity, religion_activity_options , {include_blank: _('No quiero decirlo')}, {:class => 'span5'} %>
  <hr class="thin">
  <%= user.label :citizenship, _('Tengo nacionalidad ') %>
  <%= user.text_field :citizenship, :class => 'span2' %>
  <%= user.label :ethnicity, _(' y soy de étnia') %>
  <%= user.select :ethnicity, ethnicity_options, {include_blank: _('No quiero decirlo')}, {:class => 'span2'} %>

  <hr>
  <%= user.label :study_level, _('Mi nivel de estudios es') %>
  <%= user.select :study_level, study_level_options, {include_blank: _('No quiero decirlo')} %>
  <hr class="thin">
  <%= user.label :language,_( 'También hablo')%>
  <%= user.select :language, language_options, {include_blank: _('No quiero decirlo')}, {:class => 'span2'} %>
  <%= user.label :language_level,_('a nivel') %>
  <%= user.select :language_level, language_level_options, {include_blank: _('No quiero decirlo')}, {:class => 'span2'} %>
  <hr class="thin">
  <%= user.label :job, _('Trabajo en') %>
  <%= user.select :job, job_options, {include_blank: _('No quiero decirlo')}, :class => 'span4' %>
  <%= user.label :salary, _('y mi nivel de ganancias es') %>
  <%= user.text_field :salary, class: 'span1' %>€/año

