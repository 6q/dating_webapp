<article class="form-inline">

  <%= form_for @user, :url => profile_path do |user| %>
  <hr class="thin">
  <%= _('Soy') + ' ' + User::SEEKING[@user.seeking] %>
  <hr class="thin">
  <%= user.label :birth_date_day, _('Nací el') %>
  <%= user.text_field :birth_date_day, placeholder: _('Día'), class: "span1" %>
  <%= user.label :birth_date_month, "de" %>
  <%= user.text_field :birth_date_month, placeholder: _('Mes'), class: "span1" %>
  <%= user.label :birth_date_year, "de" %>
  <%= user.text_field :birth_date_year, placeholder: _('Año'), class: "span1" %>
  <hr class="thin">

  <%= user.label :country, _('Vivo en') %>
  <%= user.select :country, country_options, {}, { :class => 'span2' } %>
  <%= user.label :postal_code, _(' y mi código postal es el') %>
  <%= user.text_field :postal_code, placeholder:_( 'CP'), :class => 'input-mini' %>.

  <hr>
  <%= user.label :marital_status, _('Ahora mismo estoy') %>
  <%= user.select :marital_status, marital_status_options, {:include_blank => _('No quiero decirlo')}, {:class => 'span2'} %>
  <%= user.label :child,_('y') %>
  <%= user.select :child, child_options, {include_blank: _('No quiero decirlo')}, {:class =>'span4'} %>
  <hr class="thin">
  <%= user.label :house,_('Vivo') %>
  <%= user.select :house, house_options, {include_blank: _('No quiero decirlo')}, {:class=> 'span4'} %>  

  <hr>
  <%= user.label :physical_desc, _('Me considero ') %>
