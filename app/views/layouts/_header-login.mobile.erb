<div class="container-fluid nopadding">
    <div class="row-fluid text-center">
        <h4><%= _('Acceso de usuarios registrados') %></h4>
    </div>
    
    <%= simple_form_for('user', :url => user_session_path) do |f| %>
        <%= f.input_field :remember_me, as: :hidden, value: true %>
        <div class="row-fluid">
            <%= f.input_field :email, :placeholder => _('Tu dirección de correo'), :required => true, :class => 'input-block-level', :autofocus => true, wrapper_html: {} %>
        </div>
        <div class="row-fluid">
            <%= f.input_field :password, :placeholder => _('Tu contraseña'), :required => true, :class => 'input-block-level' %>
        </div>
        <div class="row-fluid">
            <div class="span6">
                <%= f.button :button, _('Login'), :class => 'btn btn-success input-block-level' %>
            </div>
            <div class="span6">
                <%= f.button :button, _('Cancel'), :type => 'reset', :id => 'cancel_login', :class => 'btn input-block-level' %>
            </div>
        </div>
    <% end %>
    
    <div class="row-fluid">
        <small><%= link_to _('¿Has olvidado tu contraseña?'), new_user_password_path %></small>
    </div>
</div>