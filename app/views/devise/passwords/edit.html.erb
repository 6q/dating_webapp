<header>
  <h1><%= _('Cambia tu contrase単a') %></h1>
</header>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, :as => :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, :label => _('Tu nueva contrase単a'), :required => true, :autofocus => true %>
    <%= f.input :password_confirmation, :label => _('Confirma tu nueva contrase単a'), :required => true %>
  </div>

  <%= f.button :submit, _('Cambiar mi contrase単a'), class: 'btn btn-info' %>

<% end %>