<h2>Tus fotos (<%= "#{user.pictures.count}/#{User::PICTURE_LIMIT}" %>)</h2>

<div class="pic-container">
  <ul>
    <% user.pictures.each do |pic| %>
      <li>
        <div class="overlay">
          <%= link_to image_tag('cross.png'), pic, method: :delete, confirm: _("Â¿Estas de seguro que quieres borrar la foto?") %>
        </div>
        <span>
          <%= link_to pic.image.jpg.url , :class => 'grouped_elements' do%>
            <%= image_tag pic.image.thumb("80x80#").url %>
          <% end %>
        </span>
      </li>
    <% end %>
    <% user_remaining_pictures(user).times do %>
      <li class="empty">
        <div class="upload_pic">
          <input type="file" name="picture" class="upload_pic_input" />
          <span>
            <i class="icon icon-plus-sign"></i>
          </span>
        </div>
      </li>
    <% end %>
  </ul>
</div>

<div id="crop_modal_wrapper">
</div>
