<% 
	num = Random.rand(1..4) 
	heart_class = ''
%>

<%
	if num == 1 
		heart_class = 'ex'
		relationship = 'Ex pareja'
	end

	if num == 2 
		heart_class = 'special'
		relationship = 'Amigo Especial'
	end

	if num == 3 
		heart_class = 'friend'
		relationship = 'Amigo'
	end

	if num == 4 
		heart_class = 'family'
		relationship = 'Familiar'
	end
%>

<article class="celes-item heart-<%= heart_class %>">
	<div class="clearfix">
	<img src="/images/avatar1.png">
	
	<header>
