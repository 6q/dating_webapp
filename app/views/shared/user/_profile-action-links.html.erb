<article class="action-links">
	<ul class="clearfix">
    <% if current_user.can_interact_with?(@user) && current_user.can_message_to?(@user) %>
      <li class="message"><%= link_to '<i></i><span>'.html_safe + _('(o proponer una actividad)') + '</span>'.html_safe + _('Enviar mensaje'), "#fast-reply-#{@user.id}", 'data-toggle' => 'modal' %></li>
    <% else %>
      <li class="message disabled"><%= link_to '<i></i><span>'.html_safe + _('(o proponer una actividad)') + '</span>'.html_safe + _('Enviar mensaje'), "#", title: _('Desactivado. No cumples su franja de edad indicada.') %></li>
    <% end %>
    <% if current_user.can_interact_with?(@user) && current_user.can_chat_to?(@user) %>
      <% if @user.online? %>
        <li class="chat"><%= link_to '<i></i> '.html_safe + _('Chatear'), '#', onclick: "chatWith('#{@user.id}'); return false;" %></li>
      <% else %>
        <li class="chat disabled"><%= link_to '<i></i> '.html_safe + _('Chatear'), '#', title: _('Chat desactivado. Usuario desconectado.') %></li>
      <% end %>
    <% else %>
      <li class="chat disabled"><%= link_to '<i></i> '.html_safe + _('Chatear'), '#', title: _('Desactivado. No cumples su franja de edad indicada.') %></li>
    <% end %>
    <% if current_user.can_interact_with?(@user) %>
      <% if current_user.likes?(@user) %>
        <li class="like user_dislike"><%= link_to '<i class="disabled"></i> '.html_safe + _('¡No me gusta!'), user_unlike_path(@user), :method => :post, :remote => true, :class => "ajax_dislike_trigger" %></li>
        <li class="like hidden user_like"><%= link_to '<i></i>'.html_safe + _('¡Me gusta!'), user_like_path(@user), :method => :post, :remote => true, :class => "ajax_like_trigger" %></li>
      <% else %>
        <li class="like user_like"><%= link_to '<i></i>'.html_safe + _('¡Me gusta!'), user_like_path(@user), :method => :post, :remote => true, :class => "ajax_like_trigger" %></li>
        <li class="like hidden user_dislike"><%= link_to ('<i class="disabled"></i>').html_safe + _('¡No me gusta!'), user_unlike_path(@user), :method => :post, :remote => true, :class => "ajax_dislike_trigger" %></li>
      <% end %>
    <% else %>
      <% if current_user.likes?(@user) %>
        <li class="like user_dislike"><%= link_to '<i class="disabled"></i> '.html_safe + _('¡No me gusta!'), user_unlike_path(@user), :method => :post, :remote => true, :class => "ajax_dislike_trigger" %></li>
        <li class="like hidden user_like"><%= link_to '<i class="disabled"></i> '.html_safe + _('¡Me gusta!'), "#", title: _('Desactivado. No cumples su franja de edad indicada.') %></li>
      <% else %>
        <li class="like disabled"><%= link_to '<i class="disabled"></i> '.html_safe + _('¡Me gusta!'), "#", title: _('Desactivado. No cumples su franja de edad indicada.') %></li>
      <% end %>
    <% end %>
    <% block_modal_id = '#user-block-' + @user.id.to_s %>
    <% is_blocked = !current_user.user_blocks.where("blocked_user_id = ?", @user.id).first.nil? %>
    <% is_hidden = !current_user.user_hides.where("hidden_user_id = ?", @user.id).first.nil? %>
    <li class="block">
      <%= link_to ('<i class=' + ((is_blocked || is_hidden) ? "disabled" : "") + '></i>').html_safe + _('Bloquear'), block_modal_id, "data-toggle" => "modal" %>
    </li>
	</ul>
</article>

<%= render partial: 'shared/user/modal_user-block', locals: { user: @user, is_blocked: is_blocked, is_hidden: is_hidden } %>
<%= render partial: 'conversations/modal_new_message', locals: { user: @user } %>
