<% if @search && params[:special].blank? %>
  <div class="dropdown sort">
    <a class="dropdown-toggle" data-toggle="dropdown" href="#"><%= _('Ordenar por...') %></a>
    <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu">
      <li><%= sort_link(@search, :updated_at, _("Online"), default_order: :desc) %></li>
      <li><%= sort_link(@search, :index, _("Mejor Índice Cellove"), default_order: :asc) %></li>
      <li><%= sort_link(@search, :distance, _('Más cercanos'), { :distance => params[:distance] }) %></li>
    </ul>
  </div>
<% end %>
